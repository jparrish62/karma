<div class="container">

  <div class="col-xs-6 col-md-6 col-md-offset-3"><br><br><br>
    <h1>Post new work</h1>
    <%= form_for [@stylist,@stylist.works.build], html: { multipart: true } do |f| %>
    <% if @stylist.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@stylist.errors.count, "error") %> prohibited this stylist from being saved:</h2>

      <ul>
        <% @stylist.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
      </ul>
    </div>
    <% end %>
    <div class="field">
      <%= f.label :image %><br>
      <%= form_for [@stylist,@stylist.works.build], html: { multipart: true } do |f| %>
    </div>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_field :body, class: "form-control" %>
    </div><br>

    <div class="actions">
      <%= f.submit 'Create Stylist', :class => "btn btn-default" %>
    </div>
    <% end %>
  </div>
</div><br><br>
